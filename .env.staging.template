# Staging Environment Variables Template
# Copy this file and configure for your staging environment

# Application
NODE_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging-affiliate-aggregator.vercel.app

# Database (Supabase Staging)
DATABASE_URL=postgresql://user:password@host:port/database?pgbouncer=true&connection_limit=1
DIRECT_URL=postgresql://user:password@host:port/database

# Supabase (Staging)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=1.0

# Performance Monitoring
VERCEL_ANALYTICS_ID=your-staging-analytics-id

# Security
NEXTAUTH_SECRET=your-staging-nextauth-secret
NEXTAUTH_URL=https://staging-affiliate-aggregator.vercel.app

# Rate Limiting (Less restrictive for staging)
UPSTASH_REDIS_REST_URL=your-staging-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-staging-upstash-token

# External APIs (Use test/sandbox keys)
AFFILIATE_API_KEY=your-test-affiliate-api-key
AFFILIATE_API_SECRET=your-test-affiliate-api-secret

# Feature Flags (Enable experimental features)
ENABLE_NEW_FEATURES=true
MAINTENANCE_MODE=false

# Logging (More verbose for debugging)
LOG_LEVEL=debug
LOG_RETENTION_DAYS=7
