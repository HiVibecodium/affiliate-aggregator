# Production Environment Variables Template
# Copy this file and configure for your production environment

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://affiliate-aggregator-five.vercel.app

# Database (Supabase Production)
DATABASE_URL=postgresql://user:password@host:port/database?pgbouncer=true&connection_limit=1
DIRECT_URL=postgresql://user:password@host:port/database

# Supabase (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Performance Monitoring
VERCEL_ANALYTICS_ID=your-analytics-id
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Security
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars
NEXTAUTH_URL=https://affiliate-aggregator-five.vercel.app

# Rate Limiting
UPSTASH_REDIS_REST_URL=your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# External APIs
AFFILIATE_API_KEY=your-affiliate-api-key
AFFILIATE_API_SECRET=your-affiliate-api-secret

# Feature Flags
ENABLE_NEW_FEATURES=false
MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
